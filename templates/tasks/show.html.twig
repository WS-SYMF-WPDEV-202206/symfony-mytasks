{% extends 'tasks/base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h1>Tasks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ task.archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tasks_index') }}">back to list</a>

    <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>

    {{ include('tasks/_delete_form.html.twig') }}
{% endblock %}
