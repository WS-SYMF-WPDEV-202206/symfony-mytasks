{% extends 'tasks/base.html.twig' %}

{% block title %}Tâches archivées{% endblock %}

{% block body %}
    <h1>Tâches archivées</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for archivedTask in archivedTasks %}
            <tr>
                <td>{{ archivedTask.title }}</td>
                <td>
                    <a href="{{ path('app_tasks_show', {'id': archivedTask.id}) }}">show</a>
                    <a href="{{ path('app_tasks_edit', {'id': archivedTask.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}